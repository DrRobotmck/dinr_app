<body ng-controller='DinrCtrl'>
  <div id="bg"></div>
  <header>
    <div id='title'><h1>Dinr</h1></div>
    
    <div id='search'>
      <form ng-submit='search(searchTerm)'>
        <input type="text" ng-model='searchTerm' id='search-input'>
        <button>Search</button>
      </form>
    </div>
  </header>
  <div id='container'>
    <div id='box'>
      <div ng-repeat='restaurant in restaurants' class='restaurant' ng-click="showModal(restaurant)">
        <h4>{{restaurant.name}}</h4>
        <p>{{restaurant.address}}</p>
        {{restaurant.zip}}
      </div>
    </div>
  </div>
  <footer>
    <li ng-click="fetch()">Designed somewhere in Brooklyn. 2014</li>
  </footer>
  <div id='restaurant_modal' ng-show='current'>
    <div class='restaurant_modal_div'>
      <div id='close'><p ng-click='current=null'>CLOSE</p></div>
      <div class='' id='restaurant'>
        <h1>{{current.restaurant.name}}</h1>
        <p>{{current.restaurant.address}}</p>
        <p>{{current.restaurant.zip}}</p>
        <p>{{current.restaurant.grade}}</p>
      </div>
      <div class='top' id='map'>
        <img src="http://maps.googleapis.com/maps/api/staticmap?center={{current.restaurant.lat}},{{current.restaurant.long}}&zoom=16&size=530x295&markers=color:blue%7C{{current.restaurant.lat}},{{current.restaurant.long}}" alt="">
      </div>
      <div class='bottom' id='information'>
        <button>Yelp</button>
        <button>Inspection</button>
        <div id='display-information'>

        </div>
      </div>
    </div>
  </div>
</body>
</html>
